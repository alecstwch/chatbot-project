# Environment Variables Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================================
# Application Settings
# ============================================================
APP_ENV=development
APP_NAME=chatbot-project
LOG_LEVEL=INFO

# ============================================================
# Model Paths (12-Factor: Store paths, not in code)
# ============================================================
AIML_MODEL_PATH=models/aiml
DIALOGPT_MODEL_PATH=models/dialogpt
TRANSFORMER_MODEL_PATH=models/transformer

# ============================================================
# Data Paths
# ============================================================
DATA_RAW_PATH=data/raw
DATA_PROCESSED_PATH=data/processed
DATA_EMBEDDINGS_PATH=data/embeddings

# ============================================================
# HuggingFace Configuration
# ============================================================
HF_CACHE_DIR=models/cache
HF_TOKEN=your_huggingface_token_here
HF_DATASETS_CACHE=data/hf_cache

# ============================================================
# Training Configuration
# ============================================================
BATCH_SIZE=32
LEARNING_RATE=5e-5
MAX_EPOCHS=3
WARMUP_STEPS=100
GRADIENT_ACCUMULATION_STEPS=1

# ============================================================
# Model Configuration
# ============================================================
MAX_LENGTH=512
TEMPERATURE=0.7
TOP_P=0.9
TOP_K=50

# ============================================================
# Preprocessing Configuration
# ============================================================
PREPROCESS_LOWERCASE=true
PREPROCESS_REMOVE_STOPWORDS=true
PREPROCESS_USE_LEMMATIZATION=true
PREPROCESS_USE_STEMMING=false
PREPROCESS_LANGUAGE=english

# ============================================================
# Evaluation Configuration
# ============================================================
EVAL_BATCH_SIZE=64
EVAL_METRICS=bleu,rouge,f1

# ============================================================
# API Configuration (if deploying)
# ============================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ============================================================
# Logging
# ============================================================
LOG_FILE=logs/chatbot.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ============================================================
# External Services (optional)
# ============================================================
OPENAI_API_KEY=your_openai_key_here
OPENAI_ORG_ID=your_org_id_here
